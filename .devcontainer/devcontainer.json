{
    "name": "sje-personal-website-developer",
    "image": "mcr.microsoft.com/devcontainers/go:1-1.21-bookworm",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/aws-cli:1": {
            "version": "2.15.15"
        },
        "ghcr.io/devcontainers/features/git:1.2.0": "os-provided",
        "ghcr.io/devcontainers/features/hugo:1": {
            "extended": true,
            "version": "0.122.0"
        },
        "ghcr.io/devcontainers/features/python:1.4.2": "3.12.2"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "AquaSecurityOfficial.trivy-vulnerability-scanner",
                "davidanson.vscode-markdownlint",
                "EditorConfig.EditorConfig",
                "timonwong.shellcheck"
            ]
        }
    },
    "postCreateCommand": "sh .devcontainer/bootstrap.sh",
    "containerUser": "vscode",
    "runArgs": [
        "--userns=keep-id",
        "--env-file",
        ".devcontainer/devcontainer.env"
    ],
    "mounts": [
        "source=${env:HOME}/.aws,target=/home/vscode/.aws,type=bind"
    ]
}
